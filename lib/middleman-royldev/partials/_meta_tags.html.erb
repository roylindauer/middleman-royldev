<!-- Seo Metatags -->
<% if locals[:description].present? %>
  <meta name="description" content="<%= description %>">
<% end %>
<% if locals[:keywords].present? %>
  <meta name="keywords" content="<%= keywords %>">
<% end %>
<% if locals[:show_humans] %>
  <link type="text/plain" rel="author" href="//humans.txt" />
<% end %>
<% if locals[:show_feed] %>
  <link rel="alternate" type="application/atom+xml" title="RSS" href="//feed.xml" />
<% end %>
<% if locals[:fediverse_creator].present? %>
  <meta name="fediverse:creator" content="<%= fediverse_creator %>" />
<% end %>

<!-- OpenGraph Tags -->
<% if locals[:title].present? %>
  <meta property="og:title" content="<%= title %>" />
<% end %>
<% if locals[:description].present? %>
  <meta property="og:description" content="<%= description %>" />
<% end %>
<% if locals[:keywords].present? %>
  <meta property="og:keywords" content="<%= keywords %>" />
<% end %>
<% if locals[:image].present? %>
  <meta property="og:image" content="<%= image %>" />
<% end %>
<meta property="og:url" content="<%= URI.join(config[:host], current_page.url) %>" />
<meta property="og:type" content="website" />

